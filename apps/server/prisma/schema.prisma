// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id         String   @id @default(uuid()) @map("_id")
  login      String   @unique
  password   String
  firstName  String
  lastName   String
  middleName String?
  email      String?
  tel        String?
  role       Role
  birthDate  DateTime
  photo      String?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

enum Role {
  ADMIN
  MODER
  EMPLOYER
  PERFORMER
}
